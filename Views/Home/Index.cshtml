@model IEnumerable<ReadExcelFile.Models.MarkUser>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4 col-lg-offset-4">


        @TempData["message"]

        @using (Html.BeginForm("index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <input type="file" name="postedFile" class="form-control" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
            <input type="submit" class="btn btn-primary btn-block" value="Upload" style="margin-top:2px;" />

        }

        <br /><br /><br />

      

    </div>


</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @if (ViewBag.MarkUsers != null)
        {
            <table class="table table-striped">
                <tr>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Address</th>
                </tr>
                @foreach (var user in ViewBag.MarkUsers)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Address</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>